rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 图片集合 - 公开读取，管理员写入
    match /images/{document=**} {
      allow read: if true; // 公开读取
      allow write: if request.auth != null && request.auth.token.email == "zzou2000@gmail.com"; // 管理员写入
    }
    
    // 轮播项目集合 - 公开读取，管理员写入
    match /carouselItems/{document=**} {
      allow read: if true; // 公开读取
      allow write: if request.auth != null && request.auth.token.email == "zzou2000@gmail.com"; // 管理员写入
    }
    
    // 音乐轨道集合 - 公开读取，管理员写入
    match /tracks/{document=**} {
      allow read: if true; // 公开读取
      allow write: if request.auth != null && request.auth.token.email == "zzou2000@gmail.com"; // 管理员写入
    }
  }
}
